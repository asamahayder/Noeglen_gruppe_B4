<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffff"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/dashmain_fav_cardview"
            android:layout_width="75dp"
            android:layout_height="120dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="30dp"
            >

            <ImageView
                android:id="@+id/dashmain_fav_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <FrameLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_white" />

                <ImageView
                    android:id="@+id/dashmain_fav_icontype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/article_trans_back"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient">
            </View>

            <TextView
                android:id="@+id/dashmain_fav_titel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title Placeholder"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"/>

        </androidx.cardview.widget.CardView>

</LinearLayout>